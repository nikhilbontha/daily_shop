<!DOCTYPE html>
<html>
<head>
  <title>Register - DailyShop</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/register.css" />
</head>
<body>
  <%- include('../layout/header') %>

  <main class="register-container">
    <section class="register-card animate-up">
      <div class="register-grid">
        <figure class="register-illustration" aria-hidden="true">
          <!-- Use the PNG at /images/registerpage.png; fall back to the SVG if PNG missing -->
          <img src="/images/registerpage.png" alt="" onerror="this.onerror=null;this.src='/images/register-illustration.svg'" />
        </figure>

        <div class="register-body">
          <div class="register-header">
            <h1>Create your account</h1>
            <p class="muted">Quickly create an account to start shopping.</p>
          </div>

          <% if (error) { %>
            <p class="error-message"><%= error %></p>
          <% } %>

          <form class="register-form" action="/auth/register" method="POST" autocomplete="on">
            <div class="form-grid">
          <div class="form-group">
            <label for="name">Name</label>
            <input id="name" type="text" name="name" required />
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input id="email" type="email" name="email" required />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" type="password" name="password" required />
          </div>

          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input id="phone" type="text" name="phone" required />
          </div>

          <div class="form-group">
            <label for="city">City</label>
            <input id="city" type="text" name="city" required />
          </div>

          <div class="form-group">
            <label for="pincode">Pincode</label>
            <input id="pincode" type="text" name="pincode" required />
          </div>

          <div class="form-group">
            <label for="nearby">Nearby Landmark</label>
            <input id="nearby" type="text" name="nearby" />
          </div>

          <div class="form-group">
            <label for="state">State</label>
            <input id="state" type="text" name="state" required />
          </div>

          <div class="form-group">
            <label for="country">Country</label>
            <input id="country" type="text" name="country" value="India" required />
          </div>
            </div>

            <div class="form-actions">
              <button class="btn-primary" type="submit">Register</button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>

  <%- include('../layout/footer') %>
</body>
</html>
